

<form action="" onsubmit="return submitForm();">
  <input type="text" name="name" value="url of webpage" />
  <input type="submit" value="Save page"/>
</form>

<form action="" onsubmit="return deletePage();">
  <input type="text" name="name" value="delete this" />
  <input type="submit" value="Delete page if already saved"/>
</form>

<form action="/getpages" method="get">
  <input type="submit" value="Get List of Saved Pages" />
</form>


<script>
function submitForm() {
  var http = new XMLHttpRequest();
  var url = "/savepage";
  var params = "name=" + document.forms[0].elements["name"].value;
  http.open("POST", url, true);

  //Send the proper header information along with the request
  http.setRequestHeader("Content-type", "application/x-www-form-urlencoded");

  http.onreadystatechange = function() {//Call a function when the state changes.
    if(http.readyState == 4 && http.status == 200) {
      console.log('data posted')
    }
  }
  http.send(params);
}


function deletePage() {
  var http = new XMLHttpRequest();
  var url = "/deletePage";
  var params = "name=" + document.forms[1].elements["name"].value;
  http.open("POST", url, true);

  //Send the proper header information along with the request
  http.setRequestHeader("Content-type", "application/x-www-form-urlencoded");

  http.onreadystatechange = function() {//Call a function when the state changes.
    if(http.readyState == 4 && http.status == 200) {
      console.log('data deleted')
    }
  }
  http.send(params);
}
</script>
